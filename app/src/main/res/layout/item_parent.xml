<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <TextView
        android:id="@+id/text_tittle_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ten_dien_vien"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/s23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_item_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d0"
        android:layout_marginTop="@dimen/d10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_tittle_parent" />
</androidx.constraintlayout.widget.ConstraintLayout>